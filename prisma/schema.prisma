// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

// --- الترقيمات (Enums) ---

enum Role {
    ADMIN      // أنت (مدير النظام)
    MERCHANT // صاحب المحل
}

enum Plan {
    FREE_TRIAL    // تجربة 7 أيام
    SIX_MONTHS    // اشتراك نصف سنوي
    ANNUAL        // اشتراك سنوي
}

enum SubscriptionStatus {
    ACTIVE
    EXPIRED
    PAST_DUE
    CANCELED
}

// --- جداول "موصاحب" (Inventory & POS) ---

model Product {
    id              String   @id @default(cuid())
    name            String
    barcode         String?  
    image           String?

    categoryId     String?
    category       Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
    
    brandId        String?
    brand          Brand?    @relation(fields: [brandId], references: [id], onDelete: SetNull)
    
    costPriceUSD    Float    @default(0)
    salePriceUSD    Float    @default(0)

    // --- حقول الخصم  ---
    discountValue     Float?    @default(0)
    discountType      String?   @default("fixed") // "fixed" أو "percentage"
    discountStartDate DateTime?
    discountEndDate   DateTime?
    
    currentStock    Int      @default(0)
    minStockAlert   Int      @default(5)
    expiryDate      DateTime?

    userId          String
    user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    sales           SaleItem[]
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt

    // تأكد من أن الباركود فريد فقط لكل مستخدم (محل) وليس على مستوى السيستم كله
    @@unique([barcode, userId]) 
}

model Category {
    id        String    @id @default(cuid())
    name      String
    userId    String
    user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    products  Product[]
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt

    @@unique([name, userId]) // يمنع تكرار نفس التصنيف لنفس المستخدم
}

model Brand {
    id        String    @id @default(cuid())
    name      String
    userId    String
    user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    products  Product[]
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt

    @@unique([name, userId]) // يمنع تكرار نفس الماركة لنفس المستخدم
}

model Sale {
    id              String   @id @default(cuid())
    totalUSD        Float
    totalLBP        Float
    exchangeRate    Float    // سعر الصرف وقت هذه البيعة
    
    // تفاصيل الدفع (للزبون اللي بيدفع شقفة دولار وشقفة لبناني)
    paidCashUSD     Float    @default(0)
    paidCashLBP     Float    @default(0)
    paidCardUSD     Float    @default(0)
    
    // ربط البيعة بالمحل
    userId          String
    user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    items           SaleItem[]
    createdAt       DateTime @default(now())
}

model SaleItem {
    id        String  @id @default(cuid())
    saleId    String
    productId String
    quantity  Int
    priceUSD  Float   // السعر الذي تم البيع به (لحفظ التاريخ)

    // أضف هذا الحقل لتعرف كم وفر الزبون أو كم كان الخصم وقتها
    discountApplied Float @default(0)
    
    sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
    product   Product @relation(fields: [productId], references: [id])
}

// --- جداول المستخدمين والأمان (NextAuth + SaaS) ---

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    password      String?
    emailVerified DateTime?
    image         String?

    categories    Category[] 
    brands        Brand[]
    
    role          Role      @default(MERCHANT)
    plan          Plan      @default(FREE_TRIAL)
    
    // حالة الحساب للتحكم في الوصول
    status        SubscriptionStatus @default(ACTIVE)
    
    // إدارة التواريخ
    createdAt     DateTime  @default(now())
    trialEndsAt   DateTime? // يتم تحديثه برمجياً عند التسجيل (now + 7 days)
    subscriptionEndsAt DateTime?

    // العلاقات
    accounts      Account[]
    sessions      Session[]
    products      Product[]
    sales         Sale[]
    
    // سجل أسعار الصرف الخاصة بهذا المستخدم (المحل)
    exchangeRates ExchangeRate[] 
}

// نحتاجه لنعرف متى قام المحل بتغيير سعر الصرف وما هو السعر الحالي
model ExchangeRate {
    id        String   @id @default(cuid())
    rate      Float    // مثلاً 89500
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
}

model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
